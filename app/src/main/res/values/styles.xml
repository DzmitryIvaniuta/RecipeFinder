<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Заголовок уровня H5 -->
    <style name="TextAppearance.App.Headline5" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Заголовок уровня H6 -->
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Заголовок для списков и других элементов -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Стили для пунктов списка -->
    <style name="TextAppearance.App.ListItem" parent="TextAppearance.App.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>